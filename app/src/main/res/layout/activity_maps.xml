<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <fragment  android:layout_width="match_parent" android:layout_row="0" android:layout_column="0"
        android:layout_height="400dp" android:id="@+id/map" tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />
    <GridLayout android:layout_height="match_parent" android:layout_width="match_parent"
        android:background="#B6B6B6">
        <GridLayout
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:layout_column="0">
            <TextView
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_width="match_parent"
                android:text="Driver : "/>
            <TextView
                android:id="@+id/drivername"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_width="match_parent"
                android:text="yyy"/>
        </GridLayout>
        <GridLayout
            android:layout_row="1"
            android:layout_column="0">
            <TextView
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_width="match_parent"
                android:text="License : "/>
            <TextView
                android:id="@+id/licensenumber"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_width="match_parent"
                android:text="yyy"/>
        </GridLayout>
        <GridLayout
        android:layout_row="2"
        android:layout_column="0"
            >
        <TextView
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="match_parent"
            android:text="Truk : "/>
        <TextView
            android:id="@+id/truckname"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="match_parent"
            android:text="yyy"/>
    </GridLayout>
        <Button
                android:id="@+id/btnUpdate"
                android:background="#4169E1"
                android:layout_gravity="bottom"
                android:layout_row="3"
                android:layout_column="0"
                 android:text="Update"
                android:layout_width="match_parent">
            </Button>
    </GridLayout>

</LinearLayout>